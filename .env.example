# ========================================
# SalesVelocity.ai Platform - Environment Variables
# ========================================
# Copy this file to .env.local and fill in your values
# .env.local is gitignored and will override these defaults
#
# Required variables are marked with [REQUIRED]
# Optional variables are marked with [OPTIONAL]

# ========================================
# App Configuration
# ========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000                    # [REQUIRED] Public URL of the app
NODE_ENV=development                                         # [AUTO] Set by Next.js (development/production/test)
# NEXT_PUBLIC_APP_ENV=development                            # [OPTIONAL] Override app environment (overrides NODE_ENV for collection prefixing)
# NEXT_PUBLIC_APP_VERSION=1.0.0                              # [OPTIONAL] App version shown in health check

# ========================================
# Firebase Configuration (Client-side)
# ========================================
# Get these from Firebase Console > Project Settings > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=                                # [REQUIRED] Firebase Web API key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com # [REQUIRED] Firebase Auth domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=                             # [REQUIRED] Firebase project ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=                         # [REQUIRED] Firebase Storage bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=                    # [REQUIRED] Firebase Cloud Messaging sender ID
NEXT_PUBLIC_FIREBASE_APP_ID=                                 # [REQUIRED] Firebase App ID

# ========================================
# Firebase Admin SDK (Server-side)
# ========================================
# Option 1: Full service account JSON (preferred)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account",...} # [REQUIRED*] Full JSON service account key

# Option 2: Individual fields
FIREBASE_ADMIN_PROJECT_ID=                                   # [REQUIRED*] Firebase project ID for Admin SDK
FIREBASE_ADMIN_CLIENT_EMAIL=                                 # [REQUIRED*] Service account email
FIREBASE_ADMIN_PRIVATE_KEY=                                  # [REQUIRED*] Service account private key (use \n for newlines)
# FIREBASE_PROJECT_ID=                                       # [OPTIONAL] Fallback project ID
# FIREBASE_STORAGE_BUCKET=                                   # [OPTIONAL] Storage bucket for Admin SDK

# ========================================
# Security & Authentication
# ========================================
CRON_SECRET=                                                 # [REQUIRED] Secret for cron job auth (Bearer token)
TOKEN_ENCRYPTION_SECRET=                                     # [REQUIRED] AES encryption key for OAuth tokens
# NEXTAUTH_SECRET=                                           # [OPTIONAL] Fallback for TOKEN_ENCRYPTION_SECRET
# RECAPTCHA_SECRET_KEY=                                      # [OPTIONAL] Google reCAPTCHA v3 secret key
# WORKFLOW_WEBHOOK_SECRET=                                   # [OPTIONAL] HMAC secret for workflow webhook verification
# ALLOWED_ORIGINS=https://salesvelocity.ai                   # [OPTIONAL] Comma-separated CORS allowed origins
# ALLOW_PROD_DELETES=false                                   # [OPTIONAL] Allow destructive operations in production

# ========================================
# AI Providers
# ========================================
OPENAI_API_KEY=                                              # [REQUIRED] OpenAI API key (GPT-4, DALL-E 3, embeddings, TTS)
# ANTHROPIC_API_KEY=                                         # [OPTIONAL] Anthropic API key (Claude models)
# GOOGLE_API_KEY=                                            # [OPTIONAL] Google AI API key (Gemini provider)
# GEMINI_API_KEY=                                            # [OPTIONAL] Google Gemini API key (vision, health check)
# OPENROUTER_API_KEY=                                        # [OPTIONAL] OpenRouter API key (100+ model gateway)
# COHERE_API_KEY=                                            # [OPTIONAL] Cohere API key (reranking in RAG)
# JASPER_DEFAULT_MODEL=google/gemini-pro-1.5                 # [OPTIONAL] Default AI model for Jasper orchestrator

# ========================================
# Stripe (Payments)
# ========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=                          # [REQUIRED] Stripe publishable key (pk_...)
STRIPE_SECRET_KEY=                                           # [REQUIRED] Stripe secret key (sk_...)
STRIPE_WEBHOOK_SECRET=                                       # [REQUIRED] Stripe webhook endpoint secret (whsec_...)

# ========================================
# Email (SendGrid)
# ========================================
SENDGRID_API_KEY=                                            # [REQUIRED] SendGrid API key for transactional email
FROM_EMAIL=noreply@salesvelocity.ai                          # [REQUIRED] Default sender email address
FROM_NAME=SalesVelocity                                      # [OPTIONAL] Default sender display name
# SENDGRID_FROM_EMAIL=                                       # [OPTIONAL] Override sender email for SendGrid specifically
# SENDGRID_WEBHOOK_VERIFICATION_KEY=                         # [OPTIONAL] ECDSA public key for SendGrid event webhooks
# SENDGRID_INBOUND_SECRET=                                   # [OPTIONAL] Secret for inbound email parse webhook
# GMAIL_WEBHOOK_SECRET=                                      # [OPTIONAL] Secret for Gmail push notification webhook

