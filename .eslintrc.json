{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    // =========================================================================
    // LEGACY ZONE - Warning-level rules for gradual migration
    // These keep the dev server alive while we fix incrementally
    // =========================================================================

    // TypeScript - Warnings for legacy code
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-non-null-assertion": "warn",
    "@typescript-eslint/no-floating-promises": "warn",
    "@typescript-eslint/no-misused-promises": "warn",
    "@typescript-eslint/await-thenable": "warn",
    "@typescript-eslint/require-await": "warn",
    "@typescript-eslint/no-unnecessary-type-assertion": "warn",
    "@typescript-eslint/prefer-nullish-coalescing": "warn",
    "@typescript-eslint/prefer-optional-chain": "warn",
    "@typescript-eslint/consistent-type-imports": [
      "warn",
      {
        "prefer": "type-imports",
        "disallowTypeAnnotations": false
      }
    ],

    // Type-safety rules - warnings for legacy
    "@typescript-eslint/no-unsafe-assignment": "warn",
    "@typescript-eslint/no-unsafe-member-access": "warn",
    "@typescript-eslint/no-unsafe-argument": "warn",
    "@typescript-eslint/no-unsafe-call": "warn",
    "@typescript-eslint/no-unsafe-return": "warn",
    "@typescript-eslint/no-redundant-type-constituents": "warn",

    // React Best Practices
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react-hooks/rules-of-hooks": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "warn",
    "react/display-name": "off",

    // Next.js Best Practices
    "@next/next/no-html-link-for-pages": "warn",
    "@next/next/no-img-element": "warn",

    // General Code Quality - All warnings for legacy
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    "no-debugger": "warn",
    "no-alert": "warn",
    "no-var": "warn",
    "prefer-const": "warn",
    "prefer-template": "warn",
    "eqeqeq": ["warn", "always", { "null": "ignore" }],
    "curly": ["warn", "all"],
    "no-return-await": "off",
    "@typescript-eslint/return-await": ["warn", "in-try-catch"],

    // Import organization
    "no-duplicate-imports": "warn",
    "import/no-duplicates": "off",

    // Best practices for async/await
    "require-atomic-updates": "warn",
    "no-async-promise-executor": "warn",
    "no-promise-executor-return": "warn",

    // Prevent common bugs
    "no-constant-binary-expression": "warn",
    "no-unreachable": "warn",
    "no-unreachable-loop": "warn",
    "no-self-compare": "warn",
    "no-template-curly-in-string": "warn",
    "array-callback-return": "warn"
  },
  "overrides": [
    {
      // =====================================================================
      // STRICT ZONE - Production-Ready Territory
      // Zero tolerance for type violations in core systems:
      // - The Orchestrator Brain (AI engine)
      // - The Intelligence Module (RAG + Agent orchestration)
      // - The API Layer (external contracts)
      // All logic-affecting rules are ERRORS, not warnings
      // =====================================================================
      "files": [
        "src/lib/orchestrator/**/*.ts",
        "src/lib/orchestrator/**/*.tsx",
        "src/lib/intelligence/**/*.ts",
        "src/lib/intelligence/**/*.tsx",
        "src/app/api/**/*.ts",
        "src/app/api/**/*.tsx"
      ],
      "rules": {
        // Type Safety - ZERO TOLERANCE
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/no-unused-vars": [
          "error",
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_",
            "caughtErrorsIgnorePattern": "^_"
          }
        ],
        "@typescript-eslint/no-floating-promises": "error",
        "@typescript-eslint/no-misused-promises": "error",
        "@typescript-eslint/await-thenable": "error",
        "@typescript-eslint/require-await": "error",
        "@typescript-eslint/no-unnecessary-type-assertion": "error",
        "@typescript-eslint/no-unsafe-assignment": "error",
        "@typescript-eslint/no-unsafe-member-access": "error",
        "@typescript-eslint/no-unsafe-argument": "error",
        "@typescript-eslint/no-unsafe-call": "error",
        "@typescript-eslint/no-unsafe-return": "error",
        "@typescript-eslint/no-non-null-assertion": "error",
        "@typescript-eslint/prefer-nullish-coalescing": "error",
        "@typescript-eslint/prefer-optional-chain": "error",

        // Code Quality - ZERO TOLERANCE
        "no-var": "error",
        "prefer-const": "error",
        "eqeqeq": ["error", "always", { "null": "ignore" }],
        "curly": ["error", "all"],
        "no-duplicate-imports": "error",
        "import/no-anonymous-default-export": "error",

        // React Hooks - ZERO TOLERANCE (if applicable)
        "react-hooks/rules-of-hooks": "error"
      }
    },
    {
      // Relaxed rules for test files
      "files": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off",
        "@typescript-eslint/no-unsafe-assignment": "off",
        "@typescript-eslint/no-unsafe-member-access": "off",
        "@typescript-eslint/no-unsafe-call": "off",
        "@typescript-eslint/no-unsafe-return": "off",
        "no-console": "off"
      }
    },
    {
      // Relaxed rules for scripts
      "files": ["scripts/**/*.js", "scripts/**/*.ts"],
      "rules": {
        "no-console": "off",
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-require-imports": "off"
      }
    },
    {
      // Relaxed rules for config files
      "files": [
        "*.config.js",
        "*.config.ts",
        ".eslintrc.js",
        "next.config.js",
        "tailwind.config.ts",
        "postcss.config.js"
      ],
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-require-imports": "off",
        "no-console": "off"
      }
    },
    {
      // JavaScript files (Next.js config, etc.)
      "files": ["*.js"],
      "extends": ["plugin:@typescript-eslint/disable-type-checked"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "build/",
    "dist/",
    "/public/",
    "coverage/",
    "*.config.js",
    "*.config.ts",
    ".eslintrc.js"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
