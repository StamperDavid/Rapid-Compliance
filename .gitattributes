# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for Firebase configuration files
firestore.rules text eol=lf
firestore.indexes.json text eol=lf
firebase.json text eol=lf

# Force LF for common web files
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Force LF for shell scripts and git hooks (critical on Windows)
*.sh text eol=lf
.husky/* text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
